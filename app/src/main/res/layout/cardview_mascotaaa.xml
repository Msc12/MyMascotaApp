<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="6dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/chihuahua"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true" />


                <ImageView
                    android:id="@+id/imgHuesoBlanco"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/bone"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/imgFoto"
                    />
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/textColor"
                    android:text="@string/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewNombre"
                    android:layout_toRightOf="@+id/imgHuesoBlanco"
                    android:layout_below="@id/imgFoto"/>

                <TextView
                    android:id="@+id/textViewRaiting"
                    android:textSize="20dp"
                    android:text="@string/cantRaiting"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="21dp"
                     android:layout_below="@id/imgFoto"
                    android:layout_toLeftOf="@+id/imgHuesoAmarillo" />


        <ImageView
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/bone1"
            android:id="@+id/imgHuesoAmarillo"
            android:layout_gravity="right"
            android:layout_below="@+id/imgFoto"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>